<div class="accordion-item">
    <h2 class="accordion-header" id="bonsaiBidHeading">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#bonsaiBidCollapse" aria-expanded="false" aria-controls="bonsaiBidCollapse">
            Bonsai Bid
        </button>
    </h2>
    <div id="bonsaiBidCollapse" class="accordion-collapse collapse" aria-labelledby="bonsaiBidHeading" data-bs-parent="#workAccordion">
        <div class="accordion-body d-flex align-items-start">
            <div class="tech-logos me-3">
                <!-- Dynamically load tech logos here -->
                @foreach (var logo in TechLogos)
                {
                    <img src="@logo" alt="Technology logo" class="tech-logo me-2" />
                }
            </div>
            <div class="project-description">
                <p>
                    <!-- Your text about the project goes here -->
                    Bonsai Bid is an eBay-like auction platform built with Ruby on Rails, leveraging Redis, Sidekiq for background jobs, and PostgreSQL for data management...
                </p>
            </div>
            <div class="project-image ms-3">
                <!-- Placeholder for future project image -->
                <img src="" alt="Future Bonsai Bid logo" class="future-image" style="display:none;" />
            </div>
        </div>
    </div>
</div>
