<div class="accordion-item">
    <h2 class="accordion-header" id="blockFrameHeading">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#blockFrameCollapse" aria-expanded="false" aria-controls="blockFrameCollapse">
            BlockFrame
        </button>
    </h2>
    <div id="blockFrameCollapse" class="accordion-collapse collapse" aria-labelledby="blockFrameHeading" data-bs-parent="#workAccordion">
        <div class="accordion-body">
            <!-- Logos at the top, full width -->
            <div class="tech-logos d-flex justify-content-center flex-wrap mb-3">
                @foreach (var logo in TechLogos)
                {
                    <img src="@logo" alt="Technology logo" class="tech-logo" />
                }
            </div>
            <!-- Side-by-side description and image containers -->
            <div class="d-flex align-items-center">
                <div class="project-description flex-grow-1 me-3">
                    <p>
                        <!-- Your text about the project goes here -->
                        Did some cool stuff at BlockFrame and learned things.
                    </p>
                </div>
                <div class="project-image flex-shrink-0">
                    <img src="images/Logos/Blockframe.png" alt="Blockframe Logo" class="img-fluid rounded" />
                </div>
            </div>
        </div>
    </div>
</div>
